/* Plugin
========================================================================== */
/*
@name wui-carousel
@overview WUI 跑马灯组件
@require zepto.js & wui.js
*/
.wui-carousel
  position relative
  width 100%
  height 165px
  text-align center

  .wui-carousel-cnt
    position relative
    height 100%
    overflow hidden

    .item
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      box-sizing border-box
      visibility hidden
      overflow hidden

      &.active
        z-index 1
        visibility visible

      > a
        display block
        width 100%
        height 100%
        overflow hidden

        img
          width 100%

      > p
        position absolute
        bottom 0
        width 100%
        height 30px
        line-height 30px
        overflow ellipsis
        text-indent 8px
        text-align left
        word-break break-all
        color #fff
        font-size .9rem
        pointer-events none
        background rgba(0,0,0,.5)

        a
          display block
          margin-right 5rem
          overflow ellipsis

          i
            position relative
            display inline-block
            margin-right 10px
            padding 0 2px
            height 14px
            line-height 14px
            border-radius 2px
            text-indent 0
            color #fff
            font-size .68rem
            vertical-align middle
            background yellow

          i:after
            position absolute
            right -6px
            top 50%
            margin-top -3px
            content ''
            arrow left 3px yellow

  .wui-carousel-ctrl
    position absolute
    z-index 2
    bottom 0
    right 8px
    height 30px
    line-height 30px
    text-align right
    font-size 0

    .item
      display inline-block
      margin 0 2px
      width 6px
      height 6px
      border-radius 3px
      background rgba(144, 144, 144, 0.8)
      vertical-align middle

      &.active
          background-color #fff

