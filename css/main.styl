/** Main **/
.pagenav li
  // display flex
  border-top 1px #D97975 solid
  background-color #D00
  white-space nowrap
  font-size 0
  &:first-child
    margin-top -1px
    border 0
  a
    // flex 1
    box-sizing border-box
    display inline-block
    width 25%
    height 28px
    line-height 28px
    overflow hidden
    border-left 1px #D97975 solid
    text-align center
    font-size .95rem
    color #fff
  a:first-child
    border 0
  a.more:after
    content ''
    arrow top 4px #fff
    margin-left 4px
    vertical-align -1px
  a.more.fold:after
    arrow bottom 4px #fff
    vertical-align 2px

.w-cnt-news
  h2.title
    display inline-block
    margin 1rem 0 0
    // padding .1em .4em
    padding 3px .4rem 2px // 在手机中文字不垂直居中
    line-height 1
    font-size 14px
    color #fff
    background-color #d00
  h3.title
    margin .5rem 0
    color blue
    text-align right
  .w-search
    margin 0 0 1rem

/* 注册页 */
.form-login
  margin-bottom 5rem
  .forget-password
    margin-top 10px
    text-align right
    a
      color blue
  .reg-now
    margin-top 2rem
    text-align center
    color #999
    font-size .95rem
    a
      color green

/* 注册页 */
.cnt-404
  margin 5rem 10px
  p
    margin 1.5rem 0
    text-align center
    strong
      font-size .9rem
      color red
    a
      font-size .95rem
      color blue
      text-decoration underline

/* 个人中心 */
.cnt-center
  margin-bottom 2rem
  border-top 1px #CCC solid
  .mycomment
    position relative
    display block
    margin-bottom 4rem
    padding 0 10px
    height 34px
    line-height 34px
    border-top 1px #ccc solid
    border-bottom 1px #ccc solid
    font-size .9rem
    color blue
    background #fff
    &:after
      position absolute
      right 10px
      top 50%
      margin-top -4px
      content ''
      arrow left 4px blue
  .comment-list
    padding 0 10px
    .comment-title
      margin-top 10px
      font-size .9rem
      color blue
      &:after
        content ''
        arrow top 4px blue
        margin-left 5px
        vertical-align -1px
    .w-art
      margin 0

/* 文章页 */
.cnt-news
  .news-content
    margin 15px 0
    padding 0 10px
    h1
      font-weight bold
      font-size 1.25rem
      line-height 1.3
      color #000
    .from
      position relative
      margin-top 10px
      font-size .75rem
      color #666
      .setfont
        position absolute
        right 0
        width 30px
        border 1px solid #d7d7d7
        border-radius 1px
        text-align center
        color blue
    article
      p
        margin 1rem 0
        color #111
        // font-weight bold
        img
          display block
          max-width 100%
          height auto
          margin .5em auto
      .art-pic
        margin .5rem 0
        text-align center
        .pic
          display block
          max-width 100%
          height auto
          overflow hidden
        .des
          margin 5px 0 0
  .news-related .from
    margin 1rem 0
    text-align right
    font-size .68rem
    color #666
    span
      margin-left 1rem
  .news-comment
    margin 20px 0
    padding 0 10px
    > h3
      margin 10px 0
      font-size .9rem
      font-weight bold
      color #000
    .comment-reply
      display flex
      // display box
      .avatar
        display block
        margin-right 5px
        width 50px
        overflow hidden
        text-align center
        img
          width 100%
          height 50px
        span
          display block
          height 18px
          line-height 18px
          overflow hidden
          font-size .68rem
          color blue
      .tarea
        display flex
        // display box
        flex 1
        position relative
        textarea
          flex 1
          display block
          box-flex 1
          padding .1rem .2rem
          height 62px
          border 1px #D1D1D1 solid
          border-radius 3px
          font-size .8em
          color #444
          background-color #F8F8F8
        .tips
          position absolute
          left 10%
          right 10%
          top 50%
          margin-top -10px
          height 20px
          line-height 20px
          overflow hidden
          text-align center
          font-size .88rem
          background #EBC2C2
    .comment-bar
      margin 10px 0
      padding-bottom 3px
      border-bottom 1px #DEDEDE solid
      text-align right
      label
        font-size .8rem
        color #444
        vertical-align middle
        input
          width 10px
          height 10px
          border 1px #8E8F8F solid
          vertical-align 1px
      button
        margin-left 10px
        padding 0 8px
        height 22px
        // line-height 18px
        border 0
        border-radius 0
        color #fff
        text-align center
        font-size .8rem
        background red
    .comment-hot
      > h3
        margin 10px 0 15px
        border-left 2px red solid
        padding-left 5px
        line-height 1
        font-size .9rem
      .comment-list li
        display flex
        padding-bottom 10px
        margin-bottom 20px
        border-bottom 1px #DEDEDE solid
        &:last-child
          border none
        .avatar
          display block
          margin-right 10px
          width 40px
          overflow hidden
          img
            width 100%
            height 40px
        .cnt
          flex 1
          > h4
            display flex
            font-size .68rem
            a
              flex 1
              color blue
            time
              flex 1
              text-align right
              color #666
          > p
            margin-top 2px
            font-size .8rem
  .pagenav-ft
    margin-top 2rem
    padding 0 10px
    h3
      font-size .88rem
    li
      border-color #CDCDCD
    li:first-child
      margin-top 0
      border-top 1px solid #CDCDCD
    a
      color blue
      font-size 14px
      border-color #CDCDCD
      background-color #F3F3F3
    a.more:after
      border-top-color blue
    a.more.fold:after
      border-bottom-color blue

